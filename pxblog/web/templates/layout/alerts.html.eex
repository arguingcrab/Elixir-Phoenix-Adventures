<div class="row alerts">
  <%= if flash = get_flash(@conn, :info) do %>
    <div class="alert callout alert-info" role="alert"><%= flash %></div>
  <% end %>
  <%= if flash = get_flash(@conn, :error) do %>
    <div class="alert callout alert-error" role="alert"><%= flash %></div>
  <% end %>
</div>
